{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "target": "esnext",
        "jsx": "react",
        "rootDir": "./",
        "baseUrl": "./src",
        "sourceMap": true
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "exclude": ["node_modules", "dist"]
}

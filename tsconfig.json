{
    "compilerOptions": {
        "lib": ["es6", "dom"],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "jsx": "react",
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "baseUrl": "./src",
        "paths": {
            "@ui-components/*": ["../lib/ui-components/*"],
            "@providers/*": ["providers/*"],
            "@utils/*": ["../lib/utils/*"]
        },
        "include": ["src/**/*", "lib/**/*"],
        "exclude": ["node_modules"]
    }
}
